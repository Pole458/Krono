<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sportTextView"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
			android:layout_marginStart="16dp" android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="8dp"/>
	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/activityTypeTextView"
			app:layout_constraintStart_toStartOf="@+id/sportTextView"
			android:layout_marginTop="4dp"
			app:layout_constraintTop_toBottomOf="@+id/sportTextView"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp"/>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="StartDate"
			android:id="@+id/startDateTextView"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginRight="8dp"
			app:layout_constraintBottom_toTopOf="@+id/endDateTextView"
			android:layout_marginEnd="8dp"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="EndDate"
			android:id="@+id/endDateTextView"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginRight="8dp"
			app:layout_constraintTop_toBottomOf="@+id/startDateTextView"
			android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>