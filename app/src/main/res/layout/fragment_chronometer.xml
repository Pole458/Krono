<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<com.pole.krono.MillisecondChronometer
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/chronometer"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			android:textSize="30sp"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"
	/>

	<TextView
			android:text="Sport"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/sportTextView"
			android:textSize="18sp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/sportSpinner"
			app:layout_constraintTop_toBottomOf="@+id/chronometer"
			app:layout_constraintBottom_toTopOf="@+id/activityTypeTextView"/>

	<Spinner
			android:layout_width="250dp"
			android:id="@+id/sportSpinner"
			app:layout_constraintTop_toTopOf="@+id/sportTextView"
			app:layout_constraintBottom_toBottomOf="@+id/sportTextView"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/sportTextView" android:layout_height="wrap_content"/>

	<TextView
			android:text="Activity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/activityTypeTextView"
			android:textSize="18sp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/activityTypeSpinner"
			app:layout_constraintTop_toBottomOf="@+id/startTrackingButton"
			app:layout_constraintBottom_toBottomOf="parent"/>

	<Spinner
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:id="@+id/activityTypeSpinner"
			app:layout_constraintTop_toTopOf="@+id/activityTypeTextView"
			app:layout_constraintBottom_toBottomOf="@+id/activityTypeTextView"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/activityTypeTextView"/>

	<Button
			android:text="Start Tracking"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/startTrackingButton"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="24dp"/>

	<Button
			android:text="Pause"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/pauseResumeTrackingButton"
			app:layout_constraintLeft_toLeftOf="parent"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="@+id/startTrackingButton"
			app:layout_constraintTop_toTopOf="@+id/startTrackingButton"
			app:layout_constraintRight_toLeftOf="@+id/startTrackingButton"/>

	<Button
			android:text="Lap"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/lapTrackingButton"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toRightOf="@+id/startTrackingButton"
			android:visibility="gone"
			app:layout_constraintBottom_toBottomOf="@+id/startTrackingButton"
			app:layout_constraintTop_toTopOf="@+id/startTrackingButton"
	/>


</android.support.constraint.ConstraintLayout>
